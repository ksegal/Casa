<%= form_for @user, :html => { :multipart => true} do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if controller.action_name == 'new' || controller.action_name == 'create' %>
    <div class="col-md-6">
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>



 <!-- <div class="field">
     f.label  is_admin <br>
     f.check_box  is_admin 
  </div> -->
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :fb_link, "Your Facebook profile link" %><br>
    <%= f.text_field :fb_link %>
  </div>
  </div>
  <div class="col-md-6">
  <div class="field">
    <%= f.label :picture, "Your Profile Picture" %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select(:gender, User::GENDER_LIST, prompt: "Select...") %>
  </div>
  <!-- Not a field that we will allow user to check. System will change this automatically once they add a house 
  <div class="field">
     f.label  is_owner <br>
     f.check_box  is_owner 
  </div> -->
  <div class="field">
    <%= f.label :description, "Describe yourself!" %><br>
    <%= f.text_area :description %>
  </div>

    <!--Nested attributes form for preferences of a user -->
    <%= f.fields_for :preference do |ff| %>
      <div>
        <%= ff.label :neighborhood_pref, "Neighborhood Preference" %><br>
        <%= ff.select(:neighborhood_pref, Preference::NEIGHBORHOODS_LIST, prompt: "Select...") %>
      </div>
      <div>
        <%= ff.label :gender_pref, "Gender Preference" %><br>
        <%= ff.select(:gender_pref, Preference::GENDERS_LIST, prompt: "Select...") %>
      </div>
      <div>
        <%= ff.label :price_limit_pref, "What price do you prefer?" %><br>
        <%= ff.text_field :price_limit_pref %>
      </div>
      <div>
        <%= ff.label :room_pref, "What room type do you prefer?" %><br>
        <%= ff.select(:room_pref, Preference::ROOMS_LIST, prompt: "Select...") %>
      </div>
      <div>
        <%= ff.label :season_pref, "When do you want to rent?" %><br>
        <%= ff.select(:season_pref, Preference::SEASONS_LIST, prompt: "Select...") %>
      </div>
      <div>
        <%= ff.label :smoking_pref, "Are you okay with smoking?" %><br>
        <%= ff.check_box :smoking_pref %>
      </div>
      <div>
        <%= ff.label :drinking_pref, "Are you okay with drinking?" %><br>
        <%= ff.check_box :drinking_pref %>
      </div>
    <% end %>


  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-default submit' %>
  </div>
  </div>
<% end %>
